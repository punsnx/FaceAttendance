<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body onload="mainLoad();">
    <div id="app">
      <v-app>
        <v-main>
          <%- include('../partials/nav.ejs'); %>

          <div class="d-flex justify-center my-10">
            <h1 style="color: rgb(255, 255, 255)"><%= name %></h1>
          </div>

          <div>
            <v-card
              class="mx-auto justify-center rounded-xl pa-4 my-10"
              flat
              width="70%"
              ><div class="d-flex justify-center">
                <%- include('../partials/googlecharts.ejs'); %>
              </div>
              <div v-if="loading == false">
                <h3>Last Attendance</h3>
                <v-card
                  class="mx-auto rounded-xl mb-6"
                  width="70%"
                  variant="outlined"
                  v-for="user in lastLoginData"
                >
                  <template v-slot:title>
                    {{ user.name }} | {{ user.studentID }}
                  </template>
                  <v-container>
                    <v-row>
                      <v-col cols="12" md="8">
                        <v-card-text class="d-flex justify-center">
                          checked in at {{ user.timestamp.hour }}:{{
                            user.timestamp.minute
                          }}:{{ user.timestamp.second }}
                          {{ user.timestamp.apm }} - Date :
                          {{ user.timestamp.date }}/{{
                            user.timestamp.month
                          }}/{{ user.timestamp.year }}
                        </v-card-text>
                      </v-col>
                      <v-col cols="12" md="4">
                          <v-img v-bind:src="`${user.profileFile}`" height="100px"/>
                      </v-col>
                    </v-row>
                  </v-container>
                </v-card>
              </div>
              <!-- DELAY LOADING -->
              <v-progress-linear
                v-if="loading == true"
                indeterminate
                color="green"
              ></v-progress-linear>
            </v-card>
          </div>
        </v-main>
      </v-app>
    </div>

    <%- include('../partials/footer.ejs'); %>
    <script>
      const vuetify = Vuetify.createVuetify();
      const app = Vue.createApp({
        data() {
          return {
            lastLoginData: "",
            AllUserAttendanceToday: "",
            loading: false,
          };
        },
        mounted: function () {
          //method1 will execute at pageload
          this.loading = true;
          
          setTimeout(() => {
            this.loading = false;
            this.getLastLogin();
          }, 500);
          // auto fetch update interval
          setInterval(() => {
            this.loading = true;
            
            setTimeout(() => {
              this.loading = false;
              this.getLastLogin();
            }, 200);
          }, 120000);
        },
        methods: {
          getLastLogin() {
            fetch("/process/get/lastlogin", { method: "POST" })
              .then((res) => res.json())
              .then((datares) => {
                this.lastLoginData = datares.lastlogin;
                loadChart(datares.AllUserAttendanceToday);
              })
              .catch((err) => {
                console.error("Error: ", err);
              });
          },
        },
      });

      app.use(vuetify).mount("#app");
    </script>
    <!-- <script>
      function startLiveUpdate() {
