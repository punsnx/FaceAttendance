<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body onload="mainLoad();">
    <div id="app">
      <v-app>
        <v-main>
          <%- include('../partials/nav.ejs'); %>
          <div>
            <!-- USER ATTENDANCE DATA -->
            <div>
              <v-img
                width="50%"
                class="mx-auto mt-10 rounded-xl"
                src="<%= profileFile %>"
              >
              </v-img>
              <v-card
                v-show="!showHistory"
                class="mx-auto mt-10 rounded-xl text-center"
                color="white"
                width="80%"
                title="<%= user.firstname %> <%= user.lastname %>'s Data"
              >
                <div class="mx-auto mb-10">
                  <v-container>
                    <v-row class="text-start mx-2">
                      <v-col cols="12" md="6">
                        <div>
                          <v-card
                            class="mx-auto"
                            width="100%"
                            variant="outlined"
                          >
                            <template v-slot:title>
                              Weekly & Monthly Reports
                            </template>

                            <v-card-text class="d-flex justify-center">
                              <div>
                                <v-row class="text-start">
                                  <v-col cols="12" md="6">
                                    <h1>NO CHART DATA</h1>
                                    <v-img src="IMG/noimg.jpeg"></v-img
                                  ></v-col>
                                  <v-col cols="12" md="6">
                                    <h1>NO CHART DATA</h1>
                                    <v-img src="IMG/noimg.jpeg"></v-img
                                  ></v-col>
                                </v-row>
                              </div>
                            </v-card-text>
                          </v-card>
                        </div>
                      </v-col>
                      <v-col cols="12" md="6">
                        <div>
                          <v-card
                            class="mx-auto"
                            width="100%"
                            variant="outlined"
                          >
                            <template v-slot:title> Lastest Reports </template>

                            <v-card-text class="d-flex justify-center">
                              <div>
                                <v-row class="text-start">
                                  <v-col cols="12" md="6">
                                    <v-row class="text-start">
                                      <v-col cols="12" md="12">
                                        <p>
                                          Fullname : <%=user.firstname%>
                                          <%=user.lastname%>
                                        </p>
                                      </v-col>
                                      <v-col cols="12" md="12">
                                        <p>
                                          Class : <%=user.class%>/<%=user.room%>
                                          Number : <%=user.no%>
                                        </p>
                                      </v-col>
                                      <v-col cols="12" md="12">
                                        <p>
                                          Check Status : มา / สาย / ขาด / ลา
                                        </p>
                                      </v-col>
                                      <v-col cols="12" md="12">
                                        <p>Timestamp : 11.59 PM</p>
                                      </v-col>
                                      <v-col cols="12" md="12">
                                        <p>Date : 99 DECEMBER 9999</p>
                                      </v-col>
                                    </v-row>
                                  </v-col>
                                  <v-col cols="12" md="6">
                                    <h1>NO CHART DATA</h1>
                                    <v-img src="IMG/noimg.jpeg"></v-img>
                                  </v-col>
                                </v-row>
                              </div>
                            </v-card-text>
                          </v-card>
                        </div>
                      </v-col>
                    </v-row>
                  </v-container>
                </div>
              </v-card>
              <div class="mx-auto text-center" v-show="!showHistory">
                <v-btn
                  class="mx-auto my-10"
                  color="warning"
                  @click="showHistory = !showHistory"
                >
                  History
                </v-btn>
              </div>
            </div>

            <!-- HISTORY SECTION -->
            <div>
              <v-card
                class="mx-auto my-10 rounded-xl text-center"
                color="white"
                width="80%"
                title="<%= user.firstname %>'s' History"
                v-show="showHistory"
              >
                <div class="mx-auto text-center my-10">
                  <!-- USER HISTORY -->
                  <v-table theme="dark">
                    <thead>
                      <tr>
                        <th class="text-left">Name</th>
                        <th class="text-left">Calories</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>sfsdf</td>
                        <td>sefsf</td>
                      </tr>
                    </tbody>
                  </v-table>
                  <!-- TEST MENU  -->
                  <h1>SEL CLASS = {{ selectClass }}</h1>
                  <hr />
                  <h1>SEL ROOM = {{ selectRoom }}</h1>
                  <hr />
                  <div>
                    <v-container>
                      <v-row class="mx-auto justify-center">
                        <v-col cols="12" md="5">
                          <v-select
                            name="selectClassInput"
                            v-model="selectClass"
                            :items="classItems"
                            item-title="class"
                            item-value="class"
                            label="Class"
                            return-object
                            @update:model-value="computeRoomItem"
                          ></v-select>
                        </v-col>
                        <v-col cols="12" md="5" v-if="selectClass != ''">
                          <v-select
                            name="selectRoomInput"
                            v-model="selectRoom"
                            :items="roomItems"
                            item-title="room"
                            item-value="room"
                            label="Room"
                            return-object
                          ></v-select>
                        </v-col>
                        <!-- SEARCH BUTTON -->
                        <v-col cols="12" md="1" v-if="selectRoom != ''">
                          <v-btn
                            
                            @click="actionSubmit()"
                            class="mx-auto mt-2"
                            color="success"
                          >
                            SEARCH
                          </v-btn>

                        </v-col>
                        <!-- CLEAR BUTTON -->
                        <v-col cols="12" md="1" v-if="selectRoom != ''">
                          <v-btn
                            
                            @click="clearFilter()"
                            class="mx-auto mt-2"
                            color="red"
                          >
                          CLEAR
                          </v-btn>

                        </v-col>
                      </v-row>
                    </v-container>
                  </div>

                  <!-- EXIT BUTTON -->
                  <v-btn
                    v-if="searchStudentList == ''"
                    class="mx-auto my-6"
                    color="red"
                    @click="showHistory = !showHistory"
                  >
                    EXIT
                  </v-btn>
                </div>
                  <!-- SHOW USER PROFILE -->
                <div
                  class="d-flex justify-space-around"
                  v-if="searchStudentList != '' && showHistory == true"
                  v-for="student in searchStudentList"
                >
                  <v-card
                    class="mx-auto my-2 rounded-xl text-center"
                    width="80%"
                    variant="outlined"
                  >
                    <v-container>
                      <v-row class="mx-auto justify-center">
                        <v-col cols="12" md="8">
                          <div class="d-flex justify-start">

                            <div class="ml-10">
                              <p class="font-weight-black text-h5">
                                Name : {{ student.name }}
                              </p>
                              <p>
                                Class : {{ student.class }}/{{ student.room }} No :
                                {{ student.no }}
                              </p>
                              <p>StudentID : {{ student.studentID }}</p>
                            </div>
                          </div>
                        </v-col>
                        <v-col cols="12" md="4">
                          <v-img
                            width="50%"
                            class="mx-auto rounded"
                            v-bind:src="`${student.profileFile}`"
                          >
                          </v-img>
                      </v-row>
                    </v-container>
                  </v-card>
                </div>
                  <!-- EXIT BUTTON -->
                  <v-btn
                    v-if="searchStudentList != ''"
                    class="mx-auto my-6"
                    color="red"
                    @click="showHistory = !showHistory"
                  >
                    EXIT
                  </v-btn>
              </v-card>
            </div>

            <div v-show="user.role == 'admin'">
              <v-form
                action="/showusers"
                method="post"
                class="d-flex justify-center my-10"
              >
                <v-btn type="submit">admin users</v-btn>
              </v-form>
            </div>

          </div>
        </v-main>
      </v-app>
    </div>

    <%- include('../partials/footer.ejs'); %>
    <script>
      const vuetify = Vuetify.createVuetify();
      const app = Vue.createApp({
        data() {
          return {
            selectClass: "",
            selectRoom: "",
            classItems: [],
            roomItems: [],
            searchStudentList: "",
            showHistory: false,
            user: {
              username: "<%= user.username%>",
              email: "<%= user.email%>",
              firstname: "<%= user.firstname%>",
              lastname: "<%= user.lastname%>",
              class: "<%= user.class%>",
              room: "<%= user.room%>",
              no: "<%= user.no%>",
              role: "<%= user.role%>",
              password: "",
            },
          };
        },
        mounted: function () {
          //method1 will execute at pageload
          this.getClassItems();
        },
        methods: {
          getClassItems() {
            fetch("/process/get/classitems", { method: "POST" })
              .then((res) => res.json())
              .then((datares) => {
                this.classItems = datares.classitems;
              })
              .catch((err) => {
                console.error("Error: ", err);
              });
          },
          computeRoomItem() {
            this.roomItems = [];
            if (this.selectClass != "") {
              for (x in this.selectClass.room) {
                this.roomItems.push({ room: x });
              }
            }
          },
          actionSubmit() {
            const urlf = `/process/get/datahistory/studentlist/${this.selectClass.class}/${this.selectRoom.room}`;
            fetch(urlf, { method: "POST" })
              .then((res) => res.json())
              .then((datares) => {
                this.searchStudentList = datares.studentList;
              })
              .catch((err) => {
                console.error("Error: ", err);
              });
          },
          clearFilter() {
            this.selectClass = ""
            this.selectRoom = ""
            this.roomItems = []
            this.searchStudentList = ""
          },
        },
      });

      app.use(vuetify).mount("#app");
    </script>
  </body>
</html>
