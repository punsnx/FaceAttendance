<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

<script>
  function loadWeeklyChart(d) {
    console.log(d);
    const data = {
      labels: d[0],
      datasets: [
        {
          label: "Weekly Reports",
          data: d[1],
          backgroundColor: [
            "rgb(255, 99, 132)",
            "rgb(54, 162, 235)",
            "rgb(255, 205, 86)",
            "rgb(162, 255, 86)",
            "rgb(255, 134, 86)",
          ],
          hoverOffset: 4,
        },
      ],
    };
    new Chart("weeklyChart", {
      type: "doughnut",
      data: data,
      options: {
        // title: {
        //   display: true,
        //   text: "Weekly Reports",
        // },
      },
    });
  }
  function loadMonthlyChart(d) {
    const data = {
      labels: d[0],
      datasets: [
        {
          label: "Reports",
          data: d[1],
          backgroundColor: [
            "rgba(255, 99, 132, 0.2)",
            "rgba(255, 159, 64, 0.2)",
            "rgba(255, 205, 86, 0.2)",
            "rgba(75, 192, 192, 0.2)",
            "rgba(54, 162, 235, 0.2)",
            "rgba(153, 102, 255, 0.2)",
            "rgba(201, 203, 207, 0.2)",
          ],
          borderColor: [
            "rgb(255, 99, 132)",
            "rgb(255, 159, 64)",
            "rgb(255, 205, 86)",
            "rgb(75, 192, 192)",
            "rgb(54, 162, 235)",
            "rgb(153, 102, 255)",
            "rgb(201, 203, 207)",
          ],
          borderWidth: 1,
        },
      ],
    };
    new Chart("monthlyChart", {
      type: "bar",
      data: data,
      options: {
        scales: {
          y: {
            beginAtZero: true,
          },
        },
      },
    });
  }
</script>
