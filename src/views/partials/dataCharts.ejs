  function loadMonthlyChart(d) {
    const bgColorList = [
      // START
      "rgba(255, 99, 132, 0.2)", //RED
      "rgba(255, 159, 64, 0.2)", //ORANGE
      "rgba(255, 205, 86, 0.2)", //YELLOW
      "rgba(75, 192, 108, 0.2)", // GREEN-AQUA
      "rgba(54, 162, 235, 0.2)", // BLUE
      "rgba(153, 102, 255, 0.2)", //PURPLE
      "rgba(201, 203, 207, 0.2)", //GREY
    ];
    const borderColorList = [
      // START
      "rgb(255, 99, 132)",
      "rgb(255, 159, 64)",
      "rgb(255, 205, 86)",
      "rgb(75, 192, 108)",
      "rgb(54, 162, 235)",
      "rgb(153, 102, 255)",
      "rgb(201, 203, 207)",
    ];
    var useColor = [[], []]; //bg and border Color in order
    for (i in d[1]) {
      if (d[1][i] == 1) {
        //Checked
        useColor[0].push(bgColorList[3]);
        useColor[1].push(borderColorList[3]);
      } else if (d[1][i] == 0.7) {
        //Late
        useColor[0].push(bgColorList[1]);
        useColor[1].push(borderColorList[1]);
      } else {
        //Absent
        useColor[0].push(bgColorList[0]);
        useColor[1].push(borderColorList[0]);
      }
    }
    new Chart("monthlyChart", {
      type: "bar",
      data: {
        labels: d[0],
        datasets: [
          {
            label: `Month: ${d[2]} Year: ${d[3]}`,
            data: d[1],
            backgroundColor: useColor[0],
            borderColor: useColor[1],
            borderWidth: 1,
          },
        ],
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
          },
        },
      },
    });
  }
